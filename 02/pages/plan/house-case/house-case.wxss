page {
  background-color: #ededed;
}

::-webkit-scrollbar {
  display: none;
}

.goods-details-case {
  padding: 29rpx;
  padding-bottom: 0rpx;
  box-sizing: border-box;
  padding-top: 117rpx;
}

.navTop {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 800;
  background: #fff;
  height: 88rpx;
  display: flex;
  justify-content: space-around;
}

.navTop>.items {
  width: 25%;
  height: 100%;
  font-size: 28rpx;
  line-height: 88rpx;
  float: left;
  text-align: center;
}

.navTop>.items.active {
  color: #29cccc;
}

.navTop>.items image {
  display: inline-block;
  position: relative;
  width: 16rpx;
  height: 16rpx;
}

.bodys {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  z-index: 799;
  background: rgba(0, 0, 0, 0.7);
  height: 100%;
}

.bodys .rows {
  width: 100%;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 88rpx;
  border-top: 2rpx solid #e8e8e8;
  z-index: 800;
  padding: 30rpx;
  background: #fff;
  padding-bottom: 0;
  padding-right: 0;
}

.bodys .rows .rowsItems {
  width: 216rpx;
  width: calc((100% - 90rpx) / 3);
  width: -webkit-calc((100% - 90rpx) / 3);
  width: -moz-calc((100% - 90rpx) / 3);
  height: 80rpx;
  float: left;
  margin: 0 30rpx 30rpx 0;
  background-color: #f5f5f5;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 4rpx;
}

.bodys .rows .rowsItems.active {
  background-color: #ebf5f5;
  color: #29cccc;
}
.rowsTip{
  margin:0 30rpx 30rpx 0;
  font-size: 28rpx;
  color: #999;
  line-height: 190rpx;
  text-align: center;
}
.rowsTip > image{
  width: 37rpx;
  height: 37rpx;
  vertical-align: top;
}

.serviceBtn {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  box-shadow: 0rpx 12rpx 20rpx 10rpx rgba(255, 170, 51, 0.3);
  border-radius: 40rpx;
  z-index: 100;
}

.serviceBtn image {
  width: 100%;
  height: 100%;
}

.serviceBtn button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
}
