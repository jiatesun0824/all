.serch{
    display: flex;
    flex-direction: row;
    height: 90rpx;
    align-items: center;
    border-bottom: #e9e9e9 solid 1px
}
.searchItem {
    display: flex;
    width:610rpx;
    background: #f4f4f4;
    flex-direction: row;
    border-radius: 20rpx;
    margin-right: 30rpx;
    margin-left: 30rpx; 
}

.searchItem image {
    height: 30rpx;
    width: 30rpx;
    align-self: center;
    margin-left: 15rpx;
    margin-right: 15rpx;
}

.searchItem input {
    flex: 1;
    font-size: 30rpx;
}
.searchtxt{
  font-size: 28rpx;
  color: #ff6419;
  line-height: 90rpx;
}
.hot{
  width: 100%;
  height: 260rpx;
}
.hot .title{
	font-size: 28rpx;
	color: #999999;
  margin-left: 30rpx;
  margin-top:30rpx;
}
.hot .elementview{
  width: 730rpx;
  display: flex;
  flex-flow: row wrap;     
  align-content: space-around;
  margin: 10rpx;

}
.hot .element{
  width: auto;
  min-width: 150rpx;
	height: 60rpx;
	background-color: #f5f5f5;
	border-radius: 8rpx;
  margin-left:20rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx; 
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #333333;
}
.gary{
  width: 750rpx;
  height: 20rpx;
  background-color: #f5f5f5
}
.titleview{
  flex-direction: row;
  width: 750rpx;
  margin-top:30rpx;
  height: 32rpx;
}
.titleview .title{
  float:left;
  font-size: 28rpx;
	color: #999999;
  margin-left: 30rpx;
  line-height: 32rpx;
}
.titleview .clearAll{
  float:right;
  font-size: 24rpx;
  color: #333333;
  margin-right:30rpx;
  line-height: 32rpx;
}

.clearfix:after{
  content:'';
  height:0;
  line-height:0;
  clear:both;
  visibility: hidden;
  display: block
}
