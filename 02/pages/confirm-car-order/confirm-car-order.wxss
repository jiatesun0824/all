
/* pages/confirm-order/confirm-order.wxss */
.input-placeholder {
  text-align: right;
  z-index: 0;
}
.confirm-order{
  width:100%;
  min-height:100%;
  background-color: #ededed;
  padding-bottom: 98rpx;
}
.order-address {
  padding:20rpx 0;
  box-sizing: border-box;
}
.order-address .add-address {
  padding: 55rpx 0 0 257rpx;
  width:750rpx;
  height: 144rpx;
	background-color: #fffcfa;
	color: #333333;
	font-size: 32rpx;
  box-sizing: border-box;
  border-bottom:solid 4rpx #ff9966;
}
.order-address .add-address image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 19rpx;
}
.order-address .add-text {
	color: #333333;
	font-size: 32rpx;
}
.order-address .choose-address{
  width:750rpx;
  height: 140rpx;
	background-color: #fffcfa;
  position: relative;
  padding-left:129rpx;
	color: #333333;
  font-size: 28rpx;
  box-sizing: border-box;
  border-bottom:solid 4rpx #ff9966;
}
.choose-address .address-icon {
  position: absolute;
  left:46rpx;
  top:48rpx;
  width: 36rpx;
  height: 45rpx;
}
.choose-address .address-icon image{
  width: 36rpx;
  height: 45rpx;
}
.choose-address .address-arrow {
  position: absolute;
  top:51rpx;
  right:30rpx; 
  width: 15rpx;
  height: 28rpx;
}
.choose-address .address-arrow image{
  width: 15rpx;
  height: 28rpx;
}
.choose-address .user-mes {
  padding-top:10rpx;
  line-height: 69rpx;
}
.choose-address .address-mes {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 550rpx;
}


.order-list{
  margin-bottom:20rpx;
}
.order-details {
	width: 750rpx;
	height: 220rpx;
	background-color: #ffffff;
  box-sizing: border-box;
  padding:30rpx 37rpx 30rpx 30rpx;
}
.order-details .details-image image {
  width:160rpx;
  height: 160rpx;
}
.details-text {
  margin-left: 27rpx;
}
.details-text .text-name {
  width: 480rpx;
	color: #333333;
	font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.details-text .text-model {
  color: #999999;
	font-size: 24rpx; 
  line-height: 79rpx; 
}
.details-text .text-price {
	color: #333333;
  font-size: 28rpx;
  width:496rpx;
}
.details-text .text-price .count {
  font-size: 32rpx;
}
.order-price {
  background-color: #fff;
  font-size: 28rpx;
  line-height: 88rpx;
  /* padding: 0 31rpx; */
}
.order-price .goods-price{
  padding: 0 31rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.order-price .logistics-price{
  padding: 0 31rpx;
}
.order-price  .text {
	color: #333333;
}
.order-price  .price {
	color: #ff6419;
}
.order-remarks {
  height: 88rpx;
  font-size: 28rpx;
  line-height: 88rpx;
   padding: 0 31rpx; 
  background-color: #fff;
}
.order-remarks .text{
	color: #333333;  
}
.order-remarks .message input{
	border: none;
  height: 88rpx;
  width:550rpx;
  margin-left: 26rpx;
}
.order-remarks .message input::-webkit-input-placeholder{
  text-align: right;
}
.order-remarks .message input::-moz-placeholder {
  text-align: right;  
}
.order-remarks .message input:-moz-placeholder {
  text-align: right;  
}
.order-remarks .message input:-ms-input-placeholder{
  text-align: right;
}

/* 底部样式 */
.order-footer {
  position: fixed;
  bottom:0;
  left:0;
  height: 98rpx;
  line-height: 98rpx;
  width:750rpx;
  z-index: 2
}
.order-footer .footer-price{
  padding-left:30rpx;
	color: #333333;
  font-size: 28rpx;
  width: 490rpx;
  height: 98rpx;
  background-color: #fff;
  border-top: 2rpx solid #eee;
  box-sizing: border-box;
  z-index:999
}
.order-footer .footer-price text{
	color: #ff6419;
	font-size: 32rpx;
}
.order-footer  .footer-payment {
	background-color: #ff6419;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  width: 260rpx;
}