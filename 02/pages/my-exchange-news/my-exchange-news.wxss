page{
    /* overflow: hidden; */
}
.item{
  margin: 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.item .itemWidth{
  width: 100%
}
.item .item-grow{
  flex-grow: 1
}
.item-image{
  width: 140rpx;
	height: 140rpx;
  background-color: pink;
  vertical-align: top;
  border-radius: 5rpx;
}
.headImg{
  width: 68rpx;
	height: 68rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  position: relative
}
.isRead{
  width: 16rpx;
	height: 16rpx;
  border-radius: 50%;
  position: absolute;
  left: 54rpx;
  top: 0;
	background-color: #fa4b4b;
  z-index: 99
}
.name{
  color: #333;
  font-weight: 700;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  float: left;
  max-width: 200rpx;
}
.action{
  color: #999;
  white-space: nowrap;
  flex-shrink: 0;
  margin-left: 15rpx;
  float: left
}
.date{
  color: #999;
  font-size: 20rpx;
}
.item-content{
  padding: 10rpx 0;
  line-height: 42rpx;
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  box-orient: vertical;
  line-clamp: 3;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.item-comment{
  margin-top: 10rpx;
  font-weight: 700;
  line-height: 42rpx;
  color: #333333;
  background-color: #f5f5f5;
	border-radius: 6rpx;
  padding: 12rpx 20rpx;
  display: -webkit-box;
  box-orient: vertical;
  line-clamp: 4;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}