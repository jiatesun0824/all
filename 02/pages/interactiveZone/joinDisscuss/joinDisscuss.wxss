page{
  background: #fff;
}
.disscuss-wrap {
  width: 100vw;
  height: 100vh;
  background: #fff;
  position: relative;
}

.disscuss {
  padding: 30rpx 30rpx 0 30rpx;
  position: relative;
}
.textarea-box{
  overflow: hidden;
}

textarea {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  min-height: 422rpx;
  line-height: 48rpx;
 
}

.placeholder {
  color: #999;
  font-size: 32rpx;
}

.img-box {
 
  display: flex;
  flex-wrap: wrap;
   margin: 30rpx 0;
  padding: 20rpx 0;
  margin-bottom: 120rpx;
  height: 40vh;
}

.img-box .uploadImg {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.upload-wrap:nth-child(3),.upload-wrap:nth-child(6){
  margin-right: 0;
}

.add-img {
  width:31.9%;
  height: 222rpx;
  border-radius: 4px;
}

.bottom {
  position: fixed;
  width: 100%;
  left: 0;
  z-index: 999;
}

.location-icon {
  width: 40rpx;
  height: 42rpx;
  margin-right: 5rpx;
}

.location-box {
  display: flex;
  color: #999;
  font-size: 28rpx;
  position: fixed;
  bottom: 130rpx;
  width: 690rpx;
}

.upload-wrap {
  position:relative;
width:31.9%;
height: 222rpx;
margin-right:15rpx;
margin-bottom:15rpx;

}

.release-box {
  position: fixed;
  bottom: 20rpx;
  width: 690rpx;
  background-color: #29cccc;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  height: 80rpx;
  z-index: 99;
}

.delete-img {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
}
.pullheight{
  height: 86vh;
}
