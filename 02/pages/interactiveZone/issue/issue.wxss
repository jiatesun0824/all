page{
  background: #fff;
  border: 1rpx #fff solid;
  box-sizing: border-box;
}
.issue-wrap {
  padding: 30rpx;
  margin-top: 20rpx;
}

.placeholder-class {
  font-size: 32rpx;
  color: #999;
  text-align: center;
}

.textArea-text {
  width: 100%;
  min-height:200rpx;
  max-height: 400rpx;
}
.image-box{
 display: flex;
 flex-wrap: wrap;
 margin-top: 20rpx;
}
.uploaded-img{
  width: 31.9%;
	height: 222rpx;
  margin-right: 14rpx;
  margin-bottom: 20rpx;

}
.uploaded-img .img{
  width: 100%;
  height: 100%;
  border-radius:6rpx;
}
.upload:nth-child(3),.upload:nth-child(6),.deletedImg{
  margin-right: 0;
}

.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
}
.upload{
  position: relative;
}
.deleted{
  position:absolute;
right:-15rpx;
top:-15rpx;
width:44rpx;
height:44rpx;
border-radius: 50%;

}