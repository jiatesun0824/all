.mains{
    width: 100%;
    height: 100%;
    background: #fff;
    box-sizing: border-box;
    padding: 60rpx;
    padding-bottom: 0;
    color: #333333;
    line-height: 1;
    text-align: center;
}

.mains .mainTs{
    width: 100%;
    font-size: 28rpx;
    margin-bottom: 30rpx;
}
.mains .mainTs2{
    width: 100%;
    font-size: 36rpx;
    margin-bottom: 60rpx;
}
.mainXX{
    width: 100%;
    height: 50rpx;
    box-sizing: border-box;
    padding: 1rpx 0;
    margin-bottom: 60rpx;
}
.mainXX image{
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 34rpx;
}
.mainXX image:last-child{
    margin: 0;
}
.mains .mainTA{
    width: 100%;
    height: 330rpx;
    box-sizing: border-box;
    padding: 40rpx;
    line-height: 50rpx;
    font-size: 28rpx;
	background-color: #f5f5f5;
	border-radius: 6rpx;
    text-align: left;
    margin-bottom: 20rpx;
}
.mainUpImg{
    width: 100%;
    height: 140rpx;
    margin-bottom: 60rpx;
}
.mainUpImg>view{
    float: left;
    margin-right: 20rpx;
    width: 140rpx;
    height: 140rpx;
    position: relative;
}
.mainUpImg>view image.imgs{
    display: block;
    width: 140rpx;
    height: 140rpx;
}
.mainUpImg>view image.close{
    position: absolute;
    width: 44rpx;
    height: 44rpx;
    top: -10rpx;
    right: -10rpx;
}
.upImg{
    display: block;
    float: left;
    width: 140rpx;
    height: 140rpx;
    box-shadow: 0 10rpx 30rpx 0 
		rgba(245, 245, 245, 0.8);
}
.mains .mainT3{
    width: 100%;
    box-sizing: border-box;
    position: relative;
    padding: 0 400rpx 0 60rpx;
    font-size: 28rpx;
    text-align: left;
    height: 48rpx;
    line-height: 48rpx;
    margin-bottom: 80rpx;
}
.mains .mainT3::after{
    content: '你的评价可以帮助其他小伙伴哟';
    position: absolute;
    height: 48rpx;
    width: 400rpx;
    right: 0;
    top: 0;
    font-size: 26rpx;
	letter-spacing: 0px;
    text-align: right;
	color: #999999;
}
.mains .mainT3 image{
    width: 40rpx;
	height: 40rpx;
    position: absolute;
    left: 0;
    top: 4rpx;
}
.mains .btns{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #29cccc;
	box-shadow: 0px 6rpx 12rpx 0px 
		rgba(41, 204, 204, 0.3);
	border-radius: 100rpx;
    color: #fff;
    font-size: 32rpx;
}