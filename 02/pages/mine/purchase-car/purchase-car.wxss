page{
  background-color: #f5f5f5;
}
.purchase-car {
  width:100%;
  height:100%;
  background-color: #ededed;
  padding-top:20rpx;
  padding-bottom:98rpx;  
  box-sizing: border-box;
  overflow-y:auto;
}
.purchase-car-radio{
  width:750rpx;
  height:220rpx;
  background-color: #fff;
  overflow: hidden;
}
.car-radio-box {
  width:910rpx;
  height:220rpx;
  transition: all 0.5s;
}
.car-radio-box.car-radio-box-active{
  transform: translateX(-160rpx);
}
.car-message {
  width: 750rpx;
  height: 100%;
  padding:30rpx;
  box-sizing: border-box;
  border-bottom: #e8e8e8 solid 1rpx;
}
.car-delete{
  width: 160rpx;
  height:220rpx;
  background-color: #ff3b30;
  color: #fff;
  font-size: 32rpx;
  line-height: 220rpx;
  text-align: center;
}
.radio-box {
  margin-top:51rpx;
}
.radio-image image{
  width:160rpx;
  height: 160rpx;
  margin-left:30rpx;
}
.radio-text {
  margin-left:22rpx;
}
.radio-text .name{
  line-height: 48rpx;
	color: #333333;
	font-size: 28rpx;
  width:400rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.radio-text .style{
  line-height: 41rpx;
	font-size: 24rpx;
	color: #999999;
}
.radio-text .price{
	color: #ff6419;
	font-size: 32rpx;
  line-height: 95rpx;
}
.radio-text .add-number view{
  width:60rpx;
  height:60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
	border: solid 1rpx #999999;
}
.radio-text .add-number view:nth-child(1) {
    border-top-left-radius: 5rpx;
    border-bottom-left-radius: 5rpx;    
}
.radio-text .add-number view:nth-child(3) {
    border-top-right-radius: 5rpx;
    border-bottom-right-radius: 5rpx;    
}
.radio-text .add-number .number{
  width: 96rpx;
  border-left:none;
  border-right:none;  
}
.radio-text .count {
  width:420rpx;
}

.car-footer {
  position: fixed;
  bottom:0;
  left:0;
  width:750rpx;
  height:98rpx;
}
.car-footer .footer-left{
  width: 490rpx;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #fff;
  border-top:1px solid #eee;
  box-sizing: border-box;
}
.car-footer .footer-right{
  width:260rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  background-color: #ff6419;
}
.car-footer .footer-left .checkbox{
  /* margin-top:20rpx; */
  margin-left: 30rpx;
}
.car-footer .footer-left .text{
  margin-left:30rpx;
	color: #999999;
	font-size: 24rpx;
}
.car-footer .footer-left .price{
  margin-right: 30rpx;
	color: #ff6419;
	font-size: 32rpx;
}



.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  margin-top:-100rpx;
  top:0;

}
.empty_tip .image{
  width: 403rpx;
	height: 270rpx;
}
.empty_tip .txt{
  font-size: 28rpx;
  color: #999999;
  margin-top:40rpx;
}