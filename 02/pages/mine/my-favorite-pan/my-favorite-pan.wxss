/* pages/house-case/house-case.wxss */

@import "../../../component/render-type/render-type.wxss";
page {
    background-color:#f5f5f5;
}
.house-case {
  padding-top:88rpx;
}
.top{
  height: 88rpx;
  width: 750rpx;
  background-color: #ffffff;
  position: fixed;
  top:0;
  left:0;
  border-bottom: 2rpx solid #efefef;
	color: #333333;
	font-size: 28rpx; 
  z-index: 30;
}
.top .active {
	color: #ff6419;
}
.top image {
  width:16rpx;
  height:16rpx;
}
.room{
  height: 88rpx;
  width: 250rpx;
  text-align: center;
  line-height: 90rpx
}
.area{
  height: 90rpx;
  width: 250rpx;
   text-align: center;
  line-height: 90rpx
}
.style{
  height: 90rpx;
  width: 250rpx;
   text-align: center;
  line-height: 90rpx
}
.space{
  height: 90rpx
}


.goods-details-case {
  padding:20rpx;
  padding-bottom: 0rpx;
  background-color:#f5f5f5;
}
.case-list{
  padding:20rpx;
}
.case-item{
  position: relative;
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
}
.go3D{
  position: absolute;
  top: 160rpx;
  left: 50%;
  width: 180rpx;
  height: 68rpx;
  transform: translateX(-50%);
}
.case-item-img{
  width: 100%;
  height: 388rpx;
}
.item-info{
  position: relative;
  padding: 30rpx;
}
.info-title{
  height: 31rpx;
  line-height: 31rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.info-type{
  font-size: 24rpx;
  height: 25rpx;
  line-height: 25rpx;
  margin-top: 22rpx;
  color: #333333; 
}
.head-portrait{
  position: absolute;
  top: 35rpx;
  right: 50rpx;
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
}
.info-record{
  height: 60rpx;
  margin-top: 30rpx;
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #333333;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
  justify-content: space-between;
}
.record-left{
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
}
.record-right{
  width: 70%;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: flex-end;
}
.collect{
  width: 42rpx;
  height: 42rpx;
  margin: 9rpx 13rpx 0 0;
}
.assist{
  width: 42rpx;
  height: 42rpx;
  margin: 9rpx 13rpx 0 60rpx;
}




.goods-details-case .case-item {
  height:560rpx;
  padding-bottom:20rpx;
  background-color:#f5f5f5;  
}
.goods-details-case .case-item .case-image{
  height:420rpx;
}
.goods-details-case .case-item .case-image .bigPth {
  width:100%;
  height: 100%;
}
.goods-details-case .case-item .case-text {
  height:140rpx;
  background-color: white;
}
.goods-details-case .case-item .case-image {
  position:relative;
}
.goods-details-case .case-item .case-image .Renovation-house {
  width: 171rpx;
  height: 60rpx;
	background-color: #ff6419;
	border-radius: 30px 0px 0px 30px;
  position: absolute;
  bottom: 35rpx;
  right:0;
  color:#ffffff;
  font-size: 28rpx;
  line-height: 60rpx;
  padding-left:39rpx;
}
.case-image .Renovation-house .arrow {
  width:11rpx;
  height:24rpx;
  position:absolute;
  right:30rpx;
  top:17rpx;
}
.case-image .seven-two-ico{
  position: absolute;
  bottom:28rpx;
  left:30rpx;
}
.case-image .seven-two-ico .identical-class{
  width:70rpx;
  height: 70rpx;
  margin-right: 39rpx;
  float: left;
}
.seven-two-ico .identical-class image {
  width:70rpx;
  height: 70rpx;
}
.goods-details-case .case-item .case-text {
  padding-left:31rpx;
}
.case-text .case-mes {
  padding-top:31rpx;
}
.case-mes .case-mes-name {
  font-size: 32rpx;
  color:#333;
}
.case-mes .case-mes-function .collet, .case-mes .case-mes-function .thumbs-up {
  margin-right:26rpx;
  vertical-align:middle;
}
.case-mes .case-mes-function image{
  width:47rpx;
  height: 47rpx;
  float: left;
}
.case-mes .case-mes-function text {
  color:#999999;
  font-size: 24rpx;
  line-height: 47rpx;
  float:left;
}
.case-text .case-style {
  font-size: 26rpx;
  line-height: 57rpx;
  color:#999;
}

.case-condition{
  width:100%;
  height:100%;
  position: fixed;
  left: 0;
  top:90rpx;
	background-color: rgba(0, 0, 0, 0.5); 
  z-index:100
}
.condition-box {
  width:100%;
  position: absolute;
  left: 0;
  top:0;
  background-color: #fff;
  padding: 31rpx 0rpx 8rpx 31rpx;
  box-sizing: border-box;
  overflow: auto;
}
.condition-box .single-box {
  width:216rpx;
  height: 80rpx;
	background-color: #f5f5f5;
	border-radius: 5rpx;
  margin:0 20rpx 20rpx 0;
  text-align: center;
  font-size: 28rpx;  
  line-height: 80rpx;
	color: #333333;
}
.condition-box .single-box.condition-box-active {
	background-color: #fff1eb;
	color: #ff6419;  
} 



.img{
  width: 220rpx;
  height: 183rpx;
}

/* 渲染弹框 */


.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  margin-top:-100rpx;
  top:0;

}
.empty_tip .image{
  width: 403rpx;
	height: 270rpx;
}
.empty_tip .txt{
  font-size: 28rpx;
  color: #999999;
  margin-top:40rpx;
}


