/* pages/dredge-combo/dredge-combo.wxss */
page{
  background-color: #f5f5f5;
}
view{
  box-sizing: border-box;
}
.dredge-combo{
  width: 100%;
  padding: 30rpx;
}
.combo-mycard {
  width: 690rpx;
  height: 280rpx;
  position: relative;
}
.combo-mycard image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  box-shadow: 5rpx 15rpx 15rpx rgba(255, 140, 25, 0.1);
}
.combo-mycard .mycard-message{
  width: 100%;
  position: absolute;
  left: 0;
  top:65rpx;
  color: #fff;
  padding: 0 40rpx;
}
.mycard-message .message-title{
  font-size: 60rpx;
  line-height: 87rpx;
}
.mycard-message .message-instructions{
  width: 100%;
  font-size: 32rpx;
  line-height: 61rpx;
}
.mycard-message .message-residue{
  font-size: 28rpx;
}
.combo-choose{
  text-align: center;
  margin-top: 40rpx;
}
.combo-choose .choose-month{
  width: 335rpx;
  height: 200rpx;
  font-size: 32rpx;  
  border-radius: 5rpx;
  border:solid 1rpx #e0e0e0;
  line-height: 59rpx;
  padding-top: 44rpx;
}
.combo-choose .choose-month:nth-child(1) {
  margin-right: 20rpx;
}
.combo-choose .choose-month .money{
  color: #999;
}
.combo-choose .choose-year{
  width: 335rpx;
  height: 200rpx;
  font-size: 32rpx;
  border-radius: 5rpx;
  border:solid 1rpx #e0e0e0; 
  line-height: 59rpx;
  padding-top: 44rpx;  
}
.combo-choose .choose-year .money{
  color: #999;
}
.combo-choose .choose-active{
  border: solid 2rpx #ff6419;
  color: #ff6419;
}
.combo-choose .choose-active .money{
  color: #ff6419;
}
.combo-hint{
  text-align: center;
  line-height: 64rpx;
  color: #999;
  font-size: 24rpx;
}
.combo-dredgeBtn{
  width: 691rpx;
  height: 81rpx;
  text-align: center;
  color: #fff;
  margin:0 auto;
  margin-top: 59rpx;
	background-color: #ff6419;
	border-radius: 39rpx;
  font-size: 32rpx;
  line-height: 81rpx;
}
.combo-protocol{
  width: 580rpx;
  font-size: 24rpx;
  line-height: 41rpx;
  color: #999;
  margin: 0 auto;
  margin-top: 35rpx;
}