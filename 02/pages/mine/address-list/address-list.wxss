
page{
  background-color: #f5f5f5;
}
.address-list {
  width:100%;
  background-color: #ededed;
  padding-top:20rpx;
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  margin-bottom: 110rpx;
}
.radio-group{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.radio-group-box{
  width: 910rpx;
  min-height: 204rpx;
  margin-bottom:20rpx;
  transition: all 0.5s;
  position: relative;
}
.radio-group-box.radio-group-box-active {
  transform: translateX(-160rpx);
}
.radio-group-box .address-delete {
  width: 160rpx;
  height: 100%;
  background-color: #ff3b30;
  text-align: center;
  font-size: 32rpx;
  position: absolute;
  right: 0;
  top: 0;
  display:flex;
  align-items:center;
  justify-content:center;
  color: #fff;
}
.address-list-radio {
  width: 750rpx;
  padding: 50rpx 30rpx 50rpx 88rpx;
  background-color: #fff;
  position: relative;
  min-height: 204rpx;
  box-sizing: border-box;
}
.address-list-radio .radio-box {
  position:absolute;
  left:30rpx;
  top:50%;
  transform: translateY(-50%);
}
.address-list-radio .radio-address {
  width:561rpx;
  padding:0 25rpx 0 12rpx;
  border-right: solid #c9c9c9 1rpx;
  box-sizing: border-box;
}
.address-list-radio .radio-address .r-a-name-phone {
  margin-bottom:29rpx;
	color: #54575a;
	font-size: 28rpx;
}
.address-list-radio .radio-address .r-a-address {
	color: #999999;
	font-size: 28rpx;
  /* overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; */
}
.address-list-radio .radio-edit {
  width:50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  right:32rpx;
  top:50%;
  transform: translateY(-50%)
}
.address-list-radio .radio-edit image{
  width:35rpx;
  height: 35rpx;
}

.add-address-btn {
  position:fixed;
  left:30rpx;
  bottom:22rpx;
  z-index: 100;
  width: 690rpx;
  height: 88rpx;
  border-radius: 44rpx;
	color: #ffffff;
  font-size: 32rpx;
  line-height: 88rpx;
	background-color: #ff6419;
  text-align: center;
}

.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  margin-top:-100rpx;
  top:0;

}
.empty_tip .image{
  width: 600rpx;
	height: 450rpx;
}
.empty_tip .txt{
  font-size: 28rpx;
  color: #999999;
  margin-top:40rpx;
}