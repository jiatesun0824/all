.publishTab{
  width: 100%;
  height: 88rpx;
  display: flex;
  position: fixed;
  top: 0;
  align-items: center;
	background-color: #ffffff;
  z-index: 99
}
.publishTab-item{
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  position: relative
}
.publishTab .active{
  font-weight: bold
}
.publishTab .active::after{
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 40rpx;
  height: 6rpx;
  background-color: #29cccc;
  border-radius: 3rpx;
  transform: translateX(-50%);
}
