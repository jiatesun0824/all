/* pages/mine/myPublish/myPublish.wxss */
.type{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  height: 88rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  border-top:1rpx solid #f5f5f5;
  background-color: #ffffff;
}

.supplyselect{
  width: 375rpx;
  line-height: 88rpx;
  text-align: center;
  font-weight: 700;
  justify-content:center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}
.supply{
  width: 375rpx;
  line-height: 88rpx;
  text-align: center;
  font-family: PingFang-SC-Medium;
  justify-content:center;
  font-size: 28rpx;
  color: #333333;
}
.supplyselect_active:after {
  content: "";
  position: absolute;
  bottom: 4rpx;
  height: 6rpx;
  left: 50%;
  margin-left: -20rpx;
  background-color: #29cccc;
  display: block;
  width: 40rpx;
  border-radius: 3px;
}
.line{
  position: absolute;
  top: 0;
  left: 50%;
  width: 1rpx;
	height: 26rpx;
	background-color: #e8e8e8;
  margin-top: 31rpx;
}
.list{
  padding:120rpx 30rpx 30rpx 30rpx;
  height: 100%;
  background-color: #f5f5f5
}

.list-item{
  padding: 30rpx 30rpx 0 30rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 6rpx;
}
.list-item-box{
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 6rpx;
  position: relative
}
.list-item-img{
  width: 100%;
  height: 388rpx;
  display: block;
  border-radius: 6rpx;
}
.list-item-top{
  display: flex;
  /* height: 150rpx; */
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
  word-break: break-all;
  word-wrap: break-word;
  overflow: hidden
}
.list-item .left{
  color: #333333;
  font-size: 32rpx;
}
.list-item .left-txt{
  font-size: 32rpx;
  color: #333333;
  line-height: 48rpx;
  text-align: left;
  font-weight: bold;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/
  font-weight: 600;
}
.left-item .left-content{
  font-size: 28rpx;
  color: #333333;
  margin-top:15rpx;
  margin-bottom: 15rpx;
}
.list-item .right-item{
  width: 200rpx;
  height: 150rpx;
  margin-left: 30rpx;
}
.list-item-top .item-img{
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  virtical-align: middle
}
.list-item-box-top{
  padding: 30rpx 30rpx 0 30rpx;
}
.item-top-tit{
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.left-item{
  width: 100%;
  display:flex;
