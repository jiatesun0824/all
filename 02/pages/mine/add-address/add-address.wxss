/* pages/add-address/add-address.wxss */
page{
  background-color: #ededed;
}
.add-address {
  width: 100%;
  height: 100%;
  background-color: #ededed;
	color: #999999;
  line-height: 88rpx;
  font-size: 28rpx;
}
.provincial-linkage {
  position:fixed;
  left:0;
  bottom:0;
  width:750rpx;
  height:600rpx;
  color:#000 !important;
  text-align: center;
  z-index: 2000
}
.provincial-linkage .controller {
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  display: flex;
  border-bottom:solid 1px #ededed;
  background-color: #fff;
}
.provincial-linkage .controller view:nth-child(1){
  flex:auto;
  padding-left: 30rpx;
  box-sizing: border-box;
  text-align: left;
}
.provincial-linkage .controller view:nth-child(2){
  color:#ff6419;
  flex:auto;  
  padding-right: 30rpx;
  box-sizing: border-box;  
  text-align: right;  
}
/* 修改选中框的颜色 */
picker-view{ 
  background-color: #fff; 
}
/* 修改选中框的颜色 */
.add-address input {
  height:88rpx;
  width:580rpx;
	color: #333333;
}
.add-address .input {
  margin-left: 40rpx;
}
/* 地址主要信息 */
.add-address .address-main {
  height: 176rpx;
  border-top:solid 20rpx #ededed;
  border-bottom:solid 20rpx #ededed;
  width:100%;
  background-color: #fff;
}
.add-address .address-main .main-name,.add-address .address-main .main-phone {
  padding-left:31rpx;
  box-sizing: border-box;
}
.add-address .address-main .main-name {
  border-bottom: 1px solid #e8e8e8;
}
/* 地址详情 */
.add-address .address-details {
  height: 176rpx;
  border-top:solid 20rpx #ededed;
  border-bottom:solid 20rpx #ededed;
  width:100%;
  background-color: #fff;
}
.address-details input{
  width:553rpx;
}

.add-address .address-details .details-region,.add-address .address-details .details-street {
  padding-left:31rpx;
  box-sizing: border-box;
}
.add-address .address-details .details-region {
  border-bottom: 1px solid #e8e8e8;
}

/* 按钮 */
.confirm-address {
	width: 690rpx;
	height: 88rpx;
	background-color: #ff6419;
	border-radius: 44px;
	color: #ffffff;
	font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
  margin:30rpx 0 0 30rpx;
}


