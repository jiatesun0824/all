/* pages/homeList/homeList.wxss */

.main_body {
  margin: auto;
}

.header {
  width: 100%;
  text-align: center;
  height: 90rpx;
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.header_title {
  line-height: 90rpx;
  font-size: 32rpx;
  color: #323232;
  width: 50%;
  float: left;
  position: relative;
}

.header_title .txt {
  color: #333;
  margin: 0;
}

.header_active .txt {
  color: #29cccc;
  font-weight: 600;
  margin: 0;
}

.header_xian {
  height: 32rpx;
  width: 2rpx;
  background: #e8e8e8;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -16rpx;
}

.emptyList, .homeList {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  margin-top: 16rpx;
}

.emptyList, .homeListTop {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  margin-top: 90rpx;
}

.emptyList {
  text-align: center;
}

.emptyList image {
  width: 500rpx;
  height: 232rpx;
  margin: 290rpx auto 59rpx;
}

.emptyList .emptyText {
  display: inline-block;
  font-size: 28rpx;
  color: #999;
}

.navTop {
  width: 100%;
  height: 104rpx;
  margin-top: 91rpx;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 33;
}
.space{
  height: 90rpx;
}

.navTop scroll-view {
  width: 100%;
  height: 104rpx;
  z-index: 34;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.navTop scroll-view .items {
  width: 120rpx;
  display: inline-block;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  position: relative;
  color: #333;
  font-size: 28rpx;
  margin-right: 30rpx;
  border-radius: 4rpx;
}

.navTop scroll-view .items.active {
  background: #29cccc;
  color: #fff;
}

.restaurantList {
  box-sizing: border-box;
  background: #fff;
}

.restaurantList .restaurantTitle::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 30rpx;
  background-color: #29cccc;
  margin-right: 11rpx;
  vertical-align: middle;
}

.restaurantList .restaurantTitle {
  font-size: 32rpx;
  color: #403834;
}

.restaurantList .restaurantParam {
  margin-top: 29rpx;
  width: 100%;
  height: 60rpx;
  background: #f5f5f5;
}

.restaurantParam text {
  display: inline-block;
  width: 25%;
  line-height: 60rpx;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}

.restaurantInfo {
  height: 192rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #403834;
  display: flex;
  border-bottom: 1rpx solid #e8e8e8;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 30rpx;
}

.restaurantInfo:last-child {
  border-bottom: 0;
}

.restaurantInfo image {
  width: 128rpx;
  height: 128rpx;
  margin-right: 30rpx;
}

.restaurantInfo .infoName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
}

.restaurantInfo .brand {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #999;
  margin-top: 22rpx;
}

.restaurantList .info-box {
  width: 357rpx;
  margin-right: 47rpx;
}

.restaurantInfo .info-right {
  width: 124rpx;
  text-align: center;
}
