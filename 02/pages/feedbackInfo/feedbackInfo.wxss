page{
    background: #fff;
    width: 100%;
    min-height: 100%;
    position: relative;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.tites{
    width: 100%;
    height: 99rpx;
    line-height: 99rpx;
    font-size: 28rpx;
    color: #333;
    position: relative;
}
.tites text{
    position: absolute;
    right: 0;
    color: #999999;
}
.tites text.active{
    color: #88cc66;
}
.contents{
    width: 100%;
    font-size: 28rpx;
	line-height: 48rpx;
	color: #333333;
    margin-bottom: 36px;
}
.imgRows{
    width: 100%;
    height: 160rpx;
    margin-bottom: 80rpx;
}
.imgRows image{
    width: 160rpx;
    height: 160rpx;
    float: left;
    margin-right: 17rpx;
    display: block;
    border-radius: 6rpx;
}
.imgRows image:last-child{
    margin: 0;
}
.reply{
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx;
    background-color: #f5f5f5;
	border-radius: 6rpx;
}
.reply .replyTle{
    line-height: 1;
    font-size: 32rpx;
    margin-bottom: 22rpx;
	color: #333333;
}
.reply .replyContent{
    font-size: 28rpx;
	line-height: 48rpx;
	color: #333333;
    margin-bottom: 35rpx;
}
.reply .gmtReply{
    font-size: 28rpx;
    line-height: 1;
	color: #333333;
}
.pushPj{
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
    background-color: #f5f5f5;
	border-radius: 6rpx;
    font-size: 32rpx;
    color: #333;
}
.pushPj .tits{
    line-height: 1;
    margin-bottom: 40rpx;
}
.pushPj .btnRows{
    height: 70rpx;
}
.pushPj .btnRows .btns{
    width: 290rpx;
    width: calc((100% - 30rpx) / 2);
    width: -webkit-calc((100% - 30rpx) / 2);
    width: -moz-calc((100% - 30rpx) / 2);
    margin-right: 30rpx;
    float: left;
    height: 100%;
    box-sizing: border-box;
    border-radius: 6rpx;
	border: solid 1px #999999;
    text-align: center;
    line-height: 68rpx;
}
.pushPj .btnRows .btns:last-child{
    margin: 0;
}
.toast{
    width: 340rpx;
	height: 280rpx;
	background-color: rgba(0,0,0,.7);
	border-radius: 10rpx;
    position: fixed;
    top: 348rpx;
    left: 50%;
    box-sizing: border-box;
    padding: 48rpx 0;
    margin-left: -170rpx;
}
.toast image{
    width: 88rpx;
    height: 88rpx;
    position: absolute;
    top: 48rpx;
    left: 50%;
    margin-left: -44rpx;
}
.toast view{
    width: 100%;
    text-align: center;
    position: absolute;
    left: 0;
    color: #fff;
    font-size: 26rpx;
    line-height: 1;
}
.toast view.p1{
    top: 166rpx;
}
.toast view.p2{
    bottom: 47rpx;
}