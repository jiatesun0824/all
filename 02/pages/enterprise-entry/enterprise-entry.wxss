.banner,
.banner image{
    width: 100%;
    height: 360rpx;
    position: relative;
}
.banner .btns{
    width: 160rpx;
	height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    position: absolute;
    left: 40rpx;
    bottom: 82rpx;
	background-color: #ffffff;
	border-radius: 4rpx;
    font-size: 28rpx;
	color: #29cccc;
}

.mains{
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 30rpx 0 30rpx;
}
.mains .items{
    width: 100%;
    background: #fff;
    border-radius: 6rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    padding: 44rpx 40rpx;
    padding-right: 210rpx;
    position: relative;
}
.mains .items view.v1{
    line-height: 1;
    margin-bottom: 40rpx;
    color: #333333;
    width: 100%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.mains .items view.v1:nth-child(1){
    font-size: 28rpx;
    font-weight: 600;
}
.mains .items view.v1:nth-child(2){
    font-size: 26rpx;
}
.mains .items view.v1:nth-child(3){
    font-size: 24rpx;
    color: #999999;
}
.mains .items image{
    position: absolute;
    width: 135rpx;
	height: 114rpx;
    top: 40rpx;
    right: 30rpx;
}
.mains .items .btns{
    position: absolute;
    width: 160rpx;
	height: 56rpx;
    line-height: 56rpx;
	background-color: #29cccc;
	box-shadow: 0px 6rpx 12rpx 0px 
		rgba(41, 204, 204, 0.3);
	border-radius: 28rpx;
    font-size: 28rpx;
	color: #ffffff;
    text-align: center;
    right: 40rpx;
    bottom:40rpx;
}