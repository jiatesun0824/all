/* pages/decoration/planList/planList.wxss */
.plan-introduction{
  background-color: #fff;
  padding-bottom: 140rpx;
}
/* banner */
.plan-banner{
  position: relative;
  text-align: center;
}
.plan-banner .banner-img{
  height: 422rpx;
  width: 100%;
  vertical-align: bottom;
}
.plan-banner .icon-img{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%,-50%);
  left: 50%;
  margin-left: -35rpx;
}
.plan-content{
  background-color: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  text-align: center;
  position: relative;
  top: -20rpx;
  border-bottom:1rpx solid #e8e8e8;

}

.plan-content .title{
  font-size: 32rpx;
  color: #403834;
  margin-top: 40rpx;
  
}

.plan-content .decoration{
  font-size: 28rpx;
  color: #666666;
  padding-top: 15rpx;
}

.plan-content .tips{
  margin: 0 auto;
}

.plan-content .tips .tip-box{
  font-size: 26rpx;
  color: #29cccc;
  height: 40rpx;
  background-color: #e0ffff;
  line-height: 40rpx;
  border-radius: 4rpx;
  padding: 0 22rpx;
  margin-right: 30rpx;
}

.plan-content .detail{
  font-size: 28rpx;
  color: #333333;
  margin:36rpx 0 0;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #e8e8e8;
}
.type-box{
  text-align: left;
  margin-bottom: 60rpx;
}
.type-box .type-title{
  font-size: 32rpx;
  color: #403834;
  margin: 0 0 40rpx;
  padding-left: 30rpx;
}
.type-box .type-title::before{
  content: '';
  width: 8rpx;
	height: 30rpx;
	background-color: #29cccc;
  display: inline-block;
  vertical-align: middle;
  margin-right: 11rpx;
}
.type-box .scroll-view-box{
  width: 100%;
  height: 388rpx;
}
.type-box .scroll-view-box .type-list{
  width: 95% !important;
  border-radius: 4px;
  margin-bottom:40rpx;
  box-sizing: border-box;
}
.type-box .scroll-view-box .type-list .shop-image{
  height: 388rpx;
  width: 100%;
}
.type-box .scroll-view-box .type-list .shop-image image{
  height: 388rpx;
  display:block;
  width: 100%;
  border-radius: 4px;
  padding-left: 20rpx;
}
.type-box .type-detail{
  font-size: 28rpx;
  color: #333333;
  padding: 26rpx 30rpx 0;
}
.type-box .type-image{
  padding: 0 30rpx;
}
.type-box .type-image image{
  width: 100%;
  border-radius: 4px;
}
.type-box .type-rule{
  margin: 30rpx 30rpx 0;
  padding-bottom: 44rpx;
  border-bottom: 1px solid #e8e8e8;
}

.type-box .type-rule .type-rule-text{
	font-size: 28rpx;
  color: #333333;
}

.designer-info-box{
  padding: 0 30rpx 40rpx;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items:center;
  display: flex;
}
.designer-info-box .avatar image{
  width: 170rpx;
  height: 170rpx;
  margin-right: 40rpx;
  border-radius: 100%;
}
.designer-info-box .info{
  margin-right: 20rpx;
}
.designer-info-box .info .name{
  font-size: 32rpx;
  color: #403834;
}
.designer-info-box .info .tips{
  font-size: 28rpx;
  color: #666666;
  padding-top: 20rpx;
  padding-bottom: 14rpx;
}
.designer-info-box .info .tips .type{
  margin-right: 40rpx;
  
}
.designer-info-box .info .price{
  font-size: 28rpx;
  color: #666666;
  width:68%;
}
.designer-info-box .home-note{
  width: 160rpx;
	height: 60rpx;
	background-color: #29cccc;
	box-shadow: 0px 10rpx 16rpx 2rpx 
		rgba(77, 87, 87, 0.2);
  border-radius: 30rpx;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 20rpx;
  position: absolute;
  right: 40rpx;
}

.plan-button-group{
  height: 140rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: fixed;
  bottom: 0;
  z-index: 100;
  background-color: #fff;
}
.plan-button-group .collect-box{
  margin-right: 40rpx;
}
.plan-button-group .like-box{
  margin-right: 55rpx;
}
.plan-button-group .box image{
  width: 60rpx;
  height: 60rpx;
}
.plan-button-group .button {
  width: 210rpx;
	height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
}
.plan-button-group .btn-design{
  background-color: #29cccc;
  margin-right: 40rpx;
}
.plan-button-group .btn-inhome{
  background-color: #ffaa33;
}

.reserve-pop{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  z-index: 100;
  top: 0;
}
.reserve-pop .reserve-pop-box{
  position: absolute;
  width: 540rpx;
  background-color: #fff;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
}
.reserve-pop .reserve-pop-box .title{
  font-size: 40rpx;
  color: #29cccc;
  text-align: center;
  padding-top: 34rpx;
  margin-bottom: 14rpx;
}

.reserve-pop .reserve-pop-box .tips{
  font-size: 24rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 39rpx;
}

.reserve-pop .reserve-pop-box .inp-content{
  padding: 0 30rpx;
}

.reserve-pop .reserve-pop-box .inp-content input{
  height: 78rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding-left: 32rpx;
  background-color: #f5f5f5;
  border-radius: 39rpx;
}
.reserve-pop .reserve-pop-box .inp-content .after-binding-phone-box{
  margin-top: 40rpx;
  padding-left: 30rpx;
}
.reserve-pop .reserve-pop-box .inp-content .after-binding-phone-box .bind-tips{
  font-size: 28rpx;
  color: #333333;
  padding-right: 10rpx;
}
.reserve-pop .reserve-pop-box .inp-content .after-binding-phone-box .bind-phone{
  font-size: 28rpx;
  color: #999999;
}
.reserve-pop .reserve-pop-box .inp-content .after-binding-phone-box .bind-text{
  font-size: 28rpx;
  color: #29cccc;
  margin: 40rpx 0 60rpx;
}
.reserve-pop .reserve-pop-box .inp-content .verify-phone-box {
  background-color: #f5f5f5;
  border-radius: 39rpx;
  margin-bottom: 20rpx;
}
.reserve-pop .reserve-pop-box .inp-content .verify-phone-box input{
  width: 50%;
  margin-bottom: 0;
}
.reserve-pop .reserve-pop-box .inp-content .verify-phone-box .verify-text{
  font-size: 28rpx;
  width: 40%;
  line-height: 78rpx;
  text-align: center;
  color: #29cccc;
  position: relative;
}
.reserve-pop .reserve-pop-box .inp-content .verify-phone-box .verify-text::before{
  content: '';
  width: 1rpx;
	height: 28rpx;
	background-color: #e0e0e0;
  display: inline-block;
  position: absolute;
  left:10rpx;
  top: 50%;
  transform: translateY(-50%);
}
.reserve-pop .reserve-pop-box .reserve-button{
  margin: 0 30rpx 30rpx;
  height: 78rpx;
  border-radius: 39rpx;
  background-color: #29cccc;
  color: #fff;
  line-height: 78rpx;
  text-align: center;
  font-size: 32rpx;
}
.nav{
    bottom: 150rpx !important;
}
