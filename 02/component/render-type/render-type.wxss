/* component/render-type/render-type.wxss */
.render-type{
  width:100%;
  height: 100%;
	background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index:9999;
}
.render-type .render-type-box{
  width:540rpx;
  /* height: 442rpx; */
  background-color: #fff;
  position:absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius:10rpx;
}
.render-type .render-type-box .title {
  width:100%;
  height:88rpx;
  line-height: 88rpx;
	font-size: 32rpx;
	color: #3a3a3a;
  text-align: center;
}
.render-type .render-type-box .content-box {
  width: 100%;
  height:86rpx;
  line-height: 86rpx;
  border-top: solid #e8e8e8 1rpx;
  font-size: 32rpx;
	color: #999999;
  padding-left: 86rpx;
  box-sizing: border-box;
  position: relative;
}
.render-type .render-type-box .binding-box {
  width: 100%;
  height:86rpx;
  line-height: 86rpx;
  border-top: solid #e8e8e8 1rpx;
  font-size: 32rpx;
  padding-left: 56rpx;
  box-sizing: border-box;
  position: relative;
  color: #ff6419;
}
.render-type-box .binding-box .binding-box-left{
  margin-right: 22rpx;
}
.render-type-box .binding-box .binding-box-right{
	width: 130rpx;
	height: 48rpx;
	border-radius: 24rpx;
	border: solid 0.5rpx #ff6419;
  line-height: 48rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  text-align: center;
}
.content-box .text-one {
  width:220rpx;
} 
.content-box .text-two {
  width:162rpx;
} 
.content-box .text-three{
  position:absolute;
  right: 20rpx;
  top: 0;
}
.render-type .render-type-box .confirm-box{
  display: flex;
  text-align: center;
  line-height: 86rpx;
  width: 100%;
  border-top: solid #e8e8e8 1rpx;
  font-size: 32rpx;
}
.render-type .render-type-box .confirm-box .cancel{
	color: #999999;
  border-right: solid #e8e8e8 1rpx;
  flex: auto;
}
.render-type .render-type-box .confirm-box .confirm{
	color: #ff6419;
  flex: auto;  
}
button {
  background-color: transparent !important;
  border: none;
  border-radius: 0rpx !important;
	color: #ff6419 !important;
  font-size: 32rpx;
  outline: none;
}
button:after{
  border: none;
  outline: none;
}